<?xml version="1.0" encoding="UTF-8"?>
<resources>
  <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#8A2BE2</item>  <!-- 主色调：紫色 -->
    <item name="colorPrimaryDark">#6A1B9A</item> <!-- 状态栏颜色：深紫色 -->
    <item name="colorAccent">#FFA500</item> <!-- 强调色：橙色 -->
  </style>

  <!-- 启动画面主题 -->
  <style name="LaunchScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
    <item name="colorPrimary">#8A2BE2</item>
    <item name="colorPrimaryDark">#6A1B9A</item>
  </style>

  <!-- NativeScript 启动主题 -->
  <style name="AppTheme.NoActionBarLaunch" parent="LaunchScreenTheme">
    <item name="android:windowActionBar">false</item>
    <item name="android:windowNoTitle">true</item>
  </style>

  <!-- NativeScript Toolbar 基础样式 -->
  <style name="NativeScriptToolbarStyleBase" parent="Widget.AppCompat.Toolbar">
    <item name="android:background">?attr/colorPrimary</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    <item name="android:elevation">4dp</item>
    <item name="android:titleTextColor">@android:color/white</item>
    <item name="android:subtitleTextColor">@android:color/white</item>
  </style>
</resources>